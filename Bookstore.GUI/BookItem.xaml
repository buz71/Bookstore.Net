<UserControl x:Class="Bookstore.GUI.BookItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bookstore.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="100">
    <UserControl.Resources>
        <Style x:Key="Button_Book" TargetType="Grid">
            <Setter Property="Background" Value="YellowGreen"/>
        </Style>
    </UserControl.Resources>
    <Grid Style="{StaticResource Button_Book}">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="КНИГА" Foreground="Crimson" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Width="70" Height="10" Background="Beige" TextAlignment="Center"/>
        <TextBlock Grid.Row="2" Width="70" Height="10" Background="Beige" TextAlignment="Center"/>
    </Grid>
</UserControl>
